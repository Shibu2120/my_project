<p id="notice"><%= notice %></p>

<h1>Companie Name</h1>
<%= form_tag(companies_path, method: :get) do %>
  <p> Search for a companie </p>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>
<table style="width:100%;">
	<thead>
		<tr>
			<th style="border:1px solid black;">Name</th>
			<th style="border:1px solid black;">Place</th>
			<th style="border:1px solid black;">Description</th>
			<th style="border:1px solid black;">Show</th>
			<th style="border:1px solid black;">Edit</th>
			<th style="border:1px solid black;">Destroy</th>
			


			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @companies.each do |companie| %>
		<tr>
			<td style="border:1px solid black;"><%= companie.name %></td>
			<td style="border:1px solid black;"><%= companie.place %></td>
			<td style="border:1px solid black;"><%= companie.description %></td>
			
			<td style="border:1px solid black;"><%= link_to "show", companie %></td>
			<td style="border:1px solid black;"><%= link_to "edit", edit_company_path(companie.id) %></td>	 
			<td style="border:1px solid black;"><%= link_to "destroy", companie, method: :delete, data: {
				confirm: "Are you sure"
			} %>
		</tr>	
		<% end %>
	</tbody>
</table>
<br>

<%= link_to "New companie Data", new_company_path %>