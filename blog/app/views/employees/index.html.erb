<p id="notice"><%= notice %></p>

<h1>Employee Data</h1>
<%= form_tag(employees_path, method: :get) do %>
  <p> Search for a employee </p>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>



<table style="width:100%;">
	<thead>
		<tr>
			<th style="border:1px solid black;">First Name</th>
			<th style="border:1px solid black;">Last Name</th>
			<th style="border:1px solid black;">Phone Number</th>
			<th style="border:1px solid black;">Gmail ID</th>
			<th style="border:1px solid black;">Address</th>
			<th style="border:1px solid black;">Aadhar Number</th>
			<th style="border:1px solid black;">Gender</th>
      <th style="border:1px solid black;">Account Number</th>
      <th style="border:1px solid black;">Date of Birth</th>
      <th style="border:1px solid black;">Show</th>
      <th style="border:1px solid black;">Edit</th>
      <th style="border:1px solid black;">Destroy</th>


			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @employees.each do |employee| %>
		<tr>
			<td style="border:1px solid black;"><%= employee.first_name %></td>
			<td style="border:1px solid black;"><%= employee.last_name %></td>
			<td style="border:1px solid black;"><%= employee.phone_number %></td>
			<td style="border:1px solid black;"><%= employee.gmail_id %></td>
			<td style="border:1px solid black;"><%= employee.address %></td>
			<td style="border:1px solid black;"><%= employee.adhar_number %></td>
		    <td style="border:1px solid black;"><%= employee.gender %></td>
         	<td style="border:1px solid black;"><%= employee.account_number %></td>
            <td style="border:1px solid black;"><%= employee.date_of_birth %></td>
			<td style="border:1px solid black;"><%= link_to "show", employee %></td>
			<td style="border:1px solid black;"><%= link_to "edit", edit_employee_path(employee.id) %></td>	 
			<td style="border:1px solid black;"><%= link_to "destroy", employee, method: :delete, data: {
				confirm: "Are you sure"
			} %>
		</tr>	
		<% end %>
	</tbody>
</table>
<br>

<%= link_to "New Employee Data", new_employee_path %>