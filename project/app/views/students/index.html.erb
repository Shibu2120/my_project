<p id="notice"><%= notice %></p>

<h1>Student Data</h1>
<%= form_tag(students_path, method: :get) do %>
  <p> Search student </p>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>

 

<table style="width:100%;">
	<thead>
		<tr>
			<th style="border:1px solid black;">Name</th>
			<th style="border:1px solid black;">Contact</th>
			<th style="border:1px solid black;">Email</th>
      <th style="border:1px solid black;">Address</th>
      <th style="border:1px solid black;">Show</th>
      <th style="border:1px solid black;">Edit</th>
      <th style="border:1px solid black;">Destroy</th>


			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @students.each do |student| %>
		<tr style="border:1px solid black;">
			<td style="border:1px solid black;"><%= student.name %></td>
			<td style="border:1px solid black;"><%= student.contact %></td>
			<td style="border:1px solid black;"><%= student.email %></td>
			<td style="border:1px solid black;"><%= student.address %></td>
      <td style="border:1px solid black;"><%= link_to "show", student %></td>
			<td style="border:1px solid black;"><%= link_to "edit", edit_student_path(student.id) %></td>	 
			<td style="border:1px solid black;"><%= link_to "destroy", student, method: :delete, data: {
				confirm: "Are you sure"
			} %>
		</tr>	
		<% end %>
	</tbody>
</table>
<br>

<%= link_to "New student Data", new_student_path %>

