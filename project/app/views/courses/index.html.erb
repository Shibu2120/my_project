<p id="notice"><%= notice %></p>

<h2> courses </h2>
<%= form_tag(courses_path method: :get ) do  %>
<p>Serach course</p>
<%= text_field_tag(:search, params[:search]) %>
<%= submit_tag("search") %>
<% end %>

<table style="width:100%;">
	<thead>
		<tr>
			<th style="border:1px solid black;" >name</th>
			<th style="border:1px solid black;">fee</th>
			<th style="border:1px solid black;">duration</th>
			<th style="border:1px solid black;">show</th>
			<th style="border:1px solid black;">edit</th>
            <th style="border:1px solid black;">destroy</th>
			<th colspan="3"></th>
		</tr>
	</thead>

    <tbody>
  
    	<% @courses.each do |course| %>
    	<tr style="border:1px solid black;" >
    		<td style="border:1px solid black;" ><%= course.name %></td>
    		<td style="border:1px solid black;" ><%= course.fee %></td>
    		<td style="border:1px solid black;" ><%= course.duration %></td>
    		<td style="border:1px solid black;" ><%= link_to "show", course_path(course.id) %></td>
    	    <td style="border:1px solid black;"><%= link_to "edit", edit_course_path(course.id) %></td>
    	    <td style="border:1px solid black;"><%= link_to "destroy", course, data:{
    	    	method: :delete,
    	    	confirm: "Are you confirm"
    	    }%>		
        <tr>
        <% end %>		
    </tbody>
</table>

<%= link_to "New Course ", new_course_path %>