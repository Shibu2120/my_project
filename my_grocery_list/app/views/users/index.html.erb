<h2>User</h2>

<%= form_tag(users_path, :method => "get") do %>
	<%= label_tag(:search)%><br>
	
	<%= text_field_tag :search, params[:search] %>
<%= submit_tag("search") %>
<% end %>

<table width="100%" border="1px">
	<thead>
		<tr>
			<th>name</th>
			<th>email</th>
			<th>contact</th>
            <th>gender</th>
            <th>show</th>
            <th>edit</th>
            <th>destroy</th>
        </tr>    
	</thead>

	<tbody>
		<% @users.each do |user| %>
	<tr>
		<td><%= user.name %></td>
		<td><%= user.email %></td>
		<td><%= user.contact %></td>
		<td><%= user.gender %></td>
		<td><%= link_to "show", user %></td>
		<td><%= link_to "edit", edit_user_path(user.id) %></td>
		<td><%= link_to "destroy", user, data:{
			method: :delete,
			confirm: "Are you sure"
		} %></td>

	</tr>
	    <% end %>
    </tbody>
</table>

<%= link_to "new user", new_user_path %>